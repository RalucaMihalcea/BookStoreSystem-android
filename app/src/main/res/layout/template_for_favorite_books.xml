<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewFavoriteBook"
        android:layout_width="151dp"
        android:layout_height="131dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/titleText"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/imageViewFavoriteBook"
        android:layout_marginStart="13dp"
        android:layout_marginTop="19dp"
        android:layout_toEndOf="@+id/imageViewFavoriteBook"
        android:text="titlu"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/authorText"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/imageViewFavoriteBook"
        android:layout_marginStart="13dp"
        android:layout_marginTop="60dp"
        android:layout_toEndOf="@+id/imageViewFavoriteBook"
        android:text="autor"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/categoryText"
        android:layout_width="135dp"
        android:layout_height="30dp"
        android:text="categorie"
        android:textColor="@color/green"
        android:layout_alignTop="@+id/imageViewFavoriteBook"
        android:layout_toEndOf="@+id/imageViewFavoriteBook"
        android:layout_marginStart="13dp"
        android:layout_marginTop="100dp" />

    <ImageView
        android:id="@+id/trashImageView"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/trash"
        android:layout_alignBottom="@+id/imageViewFavoriteBook"
        android:layout_toEndOf="@+id/categoryText" />


</RelativeLayout>