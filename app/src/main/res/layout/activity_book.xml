<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.raluca.storebooksystem.BookActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:orientation="vertical">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cardView1"
        android:layout_marginStart="83dp"
        android:layout_marginTop="60dp"
        android:layout_toEndOf="@+id/cardView1"
        android:text="Hello"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="175dp" />



    <android.support.v7.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="160dp"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="cardClick">

        <LinearLayout
            android:id="@+id/lineraLayoutBook"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/moon_crossedd"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1">

        </LinearLayout>

    </android.support.v7.widget.CardView>
    </LinearLayout>


</RelativeLayout>
