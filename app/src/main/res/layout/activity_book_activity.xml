<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.raluca.storebooksystem.BookActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="382dp"
                android:layout_height="50dp">

                <android.support.v7.widget.CardView
                    android:layout_width="382dp"
                    android:layout_height="50dp"
                    app:cardBackgroundColor="@color/greenLight" />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/linearLayout">

                <android.support.v7.widget.CardView
                    android:layout_width="382dp"
                    android:layout_height="150dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    app:cardBackgroundColor="@color/bruno">

                    <TextView
                        android:id="@+id/textViewAuthor"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="160dp"
                        android:layout_marginTop="60dp"
                        android:text="Author"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textSize="14dp" />

                    <Button
                        android:id="@+id/buttonOrange"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="255dp"
                        android:layout_marginTop="90dp"
                        android:background="@drawable/button_style"
                        android:text="DOWNLOAD"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="151dp"
                        android:layout_height="131dp"
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:id="@+id/textViewTitle"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="160dp"
                        android:layout_marginTop="20dp"
                        android:text="Title"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textSize="18dp" />


                </android.support.v7.widget.CardView>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="1dp">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:cardBackgroundColor="@color/bruno">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/star1"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />

                        <ImageView
                            android:id="@+id/star2"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />

                        <ImageView
                            android:id="@+id/star3"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />

                        <ImageView
                            android:id="@+id/star4"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />

                        <ImageView
                            android:id="@+id/star5"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:cardBackgroundColor="@color/greenLight">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:text="About"
                        android:textAlignment="viewStart"
                        android:textColor="@color/bruno"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/textViewDescription"
                        android:layout_width="340dp"
                        android:layout_height="110dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="50dp"
                        android:text="Text
"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/textViewShowMore"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="150dp"
                        android:layout_marginTop="170dp"
                        android:background="@drawable/selector"
                        android:clickable="true"
                        android:text="SHOW MORE"
                        android:textAlignment="viewStart"
                        android:textColor="@color/bruno"
                        android:textSize="14dp" />

                </android.support.v7.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/bruno">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Reviews"
                    android:textColor="@color/orange"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/bruno">

                <TextView
                    android:id="@+id/textReviewUser1"
                    android:layout_width="350dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="text1"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textReview1"
                    android:layout_width="350dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="-350dp"
                    android:layout_marginTop="32dp"
                    android:text="erererere"
                    android:textColor="@color/white"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/bruno"
                android:paddingLeft="20dp"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/star1Review1"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <ImageView
                    android:id="@+id/star2Review1"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <ImageView
                    android:id="@+id/star3Review1"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <ImageView
                    android:id="@+id/star4Review1"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <ImageView
                    android:id="@+id/star5Review1"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/bruno">

                <TextView
                    android:id="@+id/textReviewUser2"
                    android:layout_width="350dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="text2"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textReview2"
                    android:layout_width="350dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="-350dp"
                    android:layout_marginTop="32dp"
                    android:text="erererere"
                    android:textColor="@color/white"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/bruno"
                android:paddingLeft="20dp"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/star1Review2"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <ImageView
                    android:id="@+id/star2Review2"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <ImageView
                    android:id="@+id/star3Review2"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <ImageView
                    android:id="@+id/star4Review2"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <ImageView
                    android:id="@+id/star5Review2"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/bruno">


                <TextView
                    android:id="@+id/textReviewUser3"
                    android:layout_width="350dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="text3"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textReview3"
                    android:layout_width="350dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="-350dp"
                    android:layout_marginTop="32dp"
                    android:text="erererere"
                    android:textColor="@color/white"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/bruno"
                android:paddingLeft="20dp"
                android:paddingTop="5dp">

                <ImageView
                    android:id="@+id/star1Review3"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <ImageView
                    android:id="@+id/star2Review3"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <ImageView
                    android:id="@+id/star3Review3"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <ImageView
                    android:id="@+id/star4Review3"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <ImageView
                    android:id="@+id/star5Review3"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@color/bruno">


                <TextView
                    android:id="@+id/ViewAllReviewsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/selector2"
                    android:clickable="true"
                    android:text="VIEW ALL REVIEWS"
                    android:textAlignment="viewStart"
                    android:textColor="@color/orangeLight"
                    android:textSize="12dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
