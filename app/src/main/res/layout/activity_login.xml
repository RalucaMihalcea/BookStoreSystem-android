<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.raluca.storebooksystem.LoginActivity">

    <TextView
        android:id="@+id/textView25"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:fontFamily="cursive"
        android:text="Login"
        android:textAlignment="center"
        android:textSize="36sp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="34dp" />

    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="241dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="115dp"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/textView25"
        android:layout_alignEnd="@+id/checkBoxRememberMe" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="241dp"
        android:layout_height="44dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="180dp"
        android:layout_below="@+id/editTextUsername"
        android:layout_alignLeft="@+id/editTextUsername"
        android:layout_alignStart="@+id/editTextUsername"
        android:layout_marginTop="18dp" />

    <Button
        android:id="@+id/buttonSignIn"

        android:layout_width="204dp"
        android:layout_height="53dp"
        android:layout_below="@+id/checkBoxRememberMe"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="Sign In"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="311dp" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:text="Not A Registered User?"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="378dp"
        android:layout_below="@+id/buttonSignIn"
        android:layout_alignStart="@+id/buttonSignIn"
        android:layout_marginTop="12dp" />

    <CheckBox
        android:id="@+id/checkBoxRememberMe"
        android:layout_width="243dp"
        android:layout_height="39dp"
        android:text="Remember me"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="245dp"
        android:layout_below="@+id/editTextPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="49dp"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="425dp" />

    <TextView
        android:id="@+id/textViewSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView26"
        android:layout_alignBottom="@+id/textView26"
        android:layout_alignEnd="@+id/buttonSignIn"
        android:clickable="true"
        android:onClick="serve"
        android:text="SignUp"
        android:textColor="@android:color/holo_red_dark" />

</RelativeLayout>