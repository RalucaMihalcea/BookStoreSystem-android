<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brunoLight2"
    tools:context="com.example.raluca.storebooksystem.AddReviewActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Write a review for: "
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="55dp" />

    <TextView
        android:id="@+id/titleBookForReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:text="DDDDDDDDDDDDDD "
        android:textAlignment="center"
        android:textColor="@color/orange"
        android:textSize="16dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="55dp"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/titleBookForReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:paddingTop="50dp"
        android:text="Rating: "
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="55dp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/titleBookForReview"
        android:layout_alignStart="@+id/titleBookForReview">

        <ImageView
            android:id="@+id/stea1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/iconstar"/>

        <ImageView
            android:id="@+id/stea2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/iconstar"/>

        <ImageView
            android:id="@+id/stea3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/iconstar"/>

        <ImageView
            android:id="@+id/stea4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/iconstar"/>

        <ImageView
            android:id="@+id/stea5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/iconstar"/>



    </LinearLayout>

    <TextView
        android:id="@+id/textViewNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Give a note"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginStart="19dp"
        android:layout_marginTop="11dp"
        android:layout_alignTop="@+id/linearLayout3"
        android:layout_toEndOf="@+id/linearLayout3" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/titleBookForReview"
        android:layout_below="@+id/linearLayout3"
        android:layout_marginTop="46dp"
        android:text="Review:"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold" />

    <Button style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/AddReview"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Add review"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/textView11"
        android:layout_toEndOf="@+id/textView7" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Write your opinion here"
        android:maxLines="5"
        android:textColor="@color/white"
        android:inputType="text|textMultiLine"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/textView13"
        android:layout_alignStart="@+id/AddReview" />


</RelativeLayout>
